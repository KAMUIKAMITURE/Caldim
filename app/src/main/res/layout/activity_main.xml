<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4FFE2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lifeistech.android.quiz.MainActivity">

    <TextView
        android:id="@+id/anser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/waku"
        android:gravity="center"
        android:text="1"


        android:textSize="36sp" />

    <TextView
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/waku"
        android:gravity="center"
        android:text="1"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/waku"
        android:gravity="center"
        android:text="1"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/count1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer3"
        android:layout_alignLeft="@+id/sign"
        android:layout_alignStart="@+id/sign"
        android:layout_marginBottom="49dp"
        android:text="1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/count2"
        android:layout_alignStart="@+id/count2"
        android:layout_centerVertical="true"
        android:text="1"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/anser1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/waku"
        android:gravity="center"
        android:text="1"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/count2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="1"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/answer2"
        android:src="@drawable/migi" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_below="@+id/anser1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sita" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_above="@+id/answer4"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:src="@drawable/ue" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toLeftOf="@+id/answer3"
        android:layout_toStartOf="@+id/answer3"
        android:src="@drawable/hidari" />

</RelativeLayout>
